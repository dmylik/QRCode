<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fon_color"
        android:orientation="vertical"
        android:paddingLeft="@dimen/main_padding"
        android:paddingTop="@dimen/main_padding"
        android:paddingRight="@dimen/main_padding"
        android:paddingBottom="@dimen/main_padding">

        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="5px"
            android:padding="1dp"
            android:src="@drawable/qr_code_png2" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16pt"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#FDFDFD"
            android:textSize="28sp"
            android:text="QR Code"/>

        <Button
            android:id="@+id/btnTakePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:text="Просмотр списка устройст"
            android:layout_marginHorizontal="16pt"
            android:layout_marginTop="1in"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnScanBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/main_padding"
            android:background="@drawable/button_background"
            android:text="@string/scan_barcode"
            android:layout_marginHorizontal="16pt"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnJSON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/main_padding"
            android:background="@drawable/button_background"
            android:text="Инструкция"
            android:layout_marginHorizontal="16pt"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/foter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16pt"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="#FDFDFD"
        android:textSize="12sp"
        android:text="ivc.brest.programm@gmail.com"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>